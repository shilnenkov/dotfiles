for_window [class="Gifview"] floating enable

# Configure border style <normal|1pixel|pixel xx|none|pixel>
new_window pixel 1
new_float pixel 1
for_window [class=".*"] border pixel 2

# Custom
focus_follows_mouse no
# hide_edge_borders none

